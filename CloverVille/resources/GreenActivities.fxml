<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10"
      alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="C.GreenActivitiesController">

    <TextField fx:id="actionField" promptText="Green action"/>

    <Button text="Add"
            onAction="#addAction"/>

    <ListView fx:id="actionListView"/>

    <Button text="Delete"
            onAction="#deleteAction"/>

    <Button text="Back"
            onAction="#goBackToMain"/>

</VBox>
