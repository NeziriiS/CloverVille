<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10"
      alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="C.CommunalTasksController">

    <TextField fx:id="taskField" promptText="Task name"/>

    <Button text="Add"
            onAction="#addTask"/>

    <ListView fx:id="taskListView"/>

    <Button text="Delete"
            onAction="#deleteTask"/>

    <Button text="Back"
            onAction="#goBackToMain"/>

</VBox>

